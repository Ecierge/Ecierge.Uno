<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:ctc="using:CommunityToolkit.WinUI.Converters"
                    xmlns:media="using:Microsoft.UI.Xaml.Media">

  <ctc:BoolToVisibilityConverter x:Key="BoolToVisibilityConverter" />
  <ctc:EmptyObjectToObjectConverter x:Key="NullToVisibilityConverter">
    <ctc:EmptyObjectToObjectConverter.EmptyValue>
      <Visibility>Collapsed</Visibility>
    </ctc:EmptyObjectToObjectConverter.EmptyValue>
    <ctc:EmptyObjectToObjectConverter.NotEmptyValue>
      <Visibility>Visible</Visibility>
    </ctc:EmptyObjectToObjectConverter.NotEmptyValue>
  </ctc:EmptyObjectToObjectConverter>

  <media:AcrylicBrush x:Key="CustomAcrylicBrush1"
                      TintOpacity="0.01"
                      TintColor="Transparent"
                      FallbackColor="#B3FFFFFF" />

  <media:AcrylicBrush x:Key="CustomAcrylicBrush2"
                  TintColor="#CCFFFFFF"
                  TintOpacity="0.1"
                  FallbackColor="#66FFFFFF" />

</ResourceDictionary>
